{% extends 'base.html.twig' %}

{% block title %}Communauth√®que{% endblock %}

{% block body_title %}
    {{ block('title') }}
{% endblock %}

{% block body_content %}
    <div id="root"></div>
    <ul class="nav nav-tabs" id="myTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="equipments-btn" data-bs-toggle="tab" data-bs-target="#equipments-tab" type="button" role="tab" aria-controls="equipments" aria-selected="true">
                {{ 'home.equipments'|trans }}
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="services-btn" data-bs-toggle="tab" data-bs-target="#services-tab" type="button" role="tab" aria-controls="services">
                {{ 'home.services'|trans }}
            </button>
        </li>
    </ul>
    <div class="tab-content" id="myTabContent">
        <div class="tab-pane fade show active" id="equipments-tab" role="tabpanel" aria-labelledby="home-tab">
            <div class="row mt-2">
                {% for equipment in equipments %}
                    <div class="col-sm-4 my-2">
                        <div class="card" style="width: auto;">
                            <img class="card-img-top" src="{{ vich_uploader_asset(equipment.images.first, 'imageFile') }}" alt="{{ equipment.name }}" />
                            <div class="card-body">
                                <h5 class="card-title">
                                    {{ equipment.name }}
                                </h5>
                                <a href="#" class="btn btn-primary">Voir</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        <div class="tab-pane fade" id="services-tab" role="tabpanel" aria-labelledby="services-tab">...</div>
        <div class="tab-pane fade" id="data-tab" role="tabpanel" aria-labelledby="data-tab">...</div>
    </div>
{% endblock %}
